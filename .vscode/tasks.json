{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "flutter",
			"command": "flutter",
			"args": [
				"pub",
				"run",
				"build_runner",
				"watch",
				"--delete-conflicting-outputs",
			],
			"problemMatcher": [
				"$dart-build_runner"
			],
			"group": "build",
			"label": "flutter pub run build_runner watch --delete-conflicting-outputs"
		},
		{
			"type": "shell",
			"command": "firebase",
			"args": [
				"emulators:start",
				"--import=test/data",
			],
			"problemMatcher": [],
			"group": "test",
			"label": "firebase emulators"
		},
		{
			"type": "shell",
			"command": "remotedev",
			"problemMatcher": [],
			"group": "test",
			"label": "remotedev"
		},
		{
			"label": "localDev",
			"group": "test",
			"dependsOn": ["remotedev", "firebase emulators, chrome for remotedev"]
		},
		{
			"type": "shell",
			"command": "Chrome",
			"osx": {
					"command": "open",
					"args": [
						"-a",
						"Google Chrome",
						"http://localhost:8000",
					]
			},
			"group": "test",
			"label": "chrome for remotedev",
		},
		{
			"type": "shell",
			"command": "Chrome",
			"osx": {
					"command": "open",
					"args": [
						"-a",
						"Google Chrome",
						"http://localhost:4000",
					]
			},
			"group": "test",
			"label": "chrome for emulators",
		}
	]
}